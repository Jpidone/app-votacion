<div class="col-md-4 mx-auto">
    <div class="card text-center">
        <div class="card-header">
            <h3>Registrese Para Votar</h3>
        </div>
        <img src="/img/logo-qatar.jpg" class=" mx-auto d-block m-2 logo" alt="">
        <div class="card-body">
            <form action="/users/signup" method="POST">
                <div class="form-group">
                    <input type="text" name="nombreUsuario" class="form-control" placeholder="Ingrese Su Nombre"
                        value="{{{nombreUsuario}}}" autofocus>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="genero" id="femenino" value="option1" >
                    <label class="form-check-label" for="exampleRadios1">
                        Femenino
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="genero" id="masculino" value="option2">
                    <label class="form-check-label" for="exampleRadios2">
                        Masculino
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="genero" id="otro" value="option3">
                    <label class="form-check-label" for="exampleRadios3">
                        Otro
                    </label>
                </div>
                <div class="form-group">
                    <input type="text" name="DNI" class="form-control" placeholder="Ingrese su DNI" value="{{{DNI}}}">
                </div>
                <div class="form-group">
                    <input type="text" name="confirmar_DNI" class="form-control" placeholder="Confirme su DNI"
                        value="{{{confirmar_DNI}}}">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">
                        REGISTRARSE
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>