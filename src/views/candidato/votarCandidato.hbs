<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
             <h3>Votar</h3>
        </div>
        <div class="card-body">
            <form action="/candidato/votar/{{{candidatoID}}}?_method=PUT" method="POST" >
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="nombrePais" class="form-control" value={{{nombrePais}}} readonly>
                </div>
                <div class="form-group">
                    <input type="text" name="nombreFederacion" class="form-control" value={{{nombreFederacion}}} readonly>
                </div>
                <div class="form-group">
                    <input type="text" name="votosn" class="form-control" value={{{votos}}} readonly>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        VOTAR
                    </button>
                </div>
            </form>

        </div>
       

    </div>
</div>